<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="8dp"
    tools:context=".ProductSingleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/single_product_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="Product Image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/single_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="product name"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/single_product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category" />

            <TextView
                android:id="@+id/single_product_desc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:lineSpacingMultiplier="10"
                android:text="product description" />


            <TextView
                android:id="@+id/single_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>